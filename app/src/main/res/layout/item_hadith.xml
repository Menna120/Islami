<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="?attr/colorPrimary"
    app:cardCornerRadius="@dimen/corner_radius_xlarge"
    app:cardElevation="@dimen/elevation_medium"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hadith_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:alpha=".25"
            android:importantForAccessibility="no"
            android:src="@drawable/hadith_card_background"
            app:layout_constraintBottom_toTopOf="@+id/mosque_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/corner_left" />

        <ImageView
            android:id="@+id/mosque_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:importantForAccessibility="no"
            android:src="@drawable/mosque"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/corner_left"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_large"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:rotation="270"
            android:src="@drawable/corner"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hadith_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.HeadlineSmall"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="@id/corner_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/corner_left"
            tools:text="الحد يث الأول" />

        <ImageView
            android:id="@+id/corner_right"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_large"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:src="@drawable/corner"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/mosque_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/corner_left">

            <TextView
                android:id="@+id/hadith_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_character"
                android:paddingHorizontal="@dimen/space_xlarge"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="@string/hadith" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
