<resources>
    <!-- Base application theme. -->
    <style name="Theme.Islami" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/gold</item>
        <item name="colorTertiary">@color/white</item>

        <item name="android:windowBackground">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background_layered</item>
        <item name="postSplashScreenTheme">@style/Theme.Islami</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:minHeight">64dp</item>
        <item name="android:background">@color/gold</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemTextAppearanceActive">
            @style/TextAppearance.App.BottomNavigationView.Active
        </item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/scrim</item>
    </style>

    <style name="TextAppearance.App.BottomNavigationView.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/janna_lt_bold</item>
    </style>

    <style name="TextAppearance.App.Toolbar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/janna_lt_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/janna_lt_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/janna_lt_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/janna_lt_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>